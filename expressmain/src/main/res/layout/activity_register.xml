<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login">

    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:singleLine="true"
        android:maxLength="11"
        android:inputType="phone"
        android:layout_marginTop="180dp"
        android:hint="手机号"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="60dp"
        android:background="@color/transparent"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray300"
        android:layout_alignStart="@+id/et_username"
        android:layout_alignEnd="@+id/et_username"
        android:layout_below="@+id/et_username"/>
    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="textPassword"
        android:maxLength="16"
        android:background="@color/transparent"
        android:layout_below="@+id/view"
        android:layout_alignStart="@+id/et_username"
        android:layout_alignEnd="@+id/et_username"
        android:hint="密码"
        android:textColor="@color/white"
        android:textColorHint="@color/white"/>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray300"
        android:layout_alignStart="@+id/et_username"
        android:layout_alignEnd="@+id/et_username"
        android:layout_below="@+id/et_password"/>

    <EditText
        android:id="@+id/et_re_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="textPassword"
        android:maxLength="16"
        android:background="@color/transparent"
        android:layout_alignStart="@+id/et_username"
        android:layout_alignEnd="@+id/et_username"
        android:hint="确认密码"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_below="@+id/view1"
        />
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray300"
        android:layout_alignStart="@+id/et_username"
        android:layout_alignEnd="@+id/et_username"
        android:layout_below="@+id/et_re_password"/>
    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:textColor="@color/white"
        android:background="@drawable/btn_sharp"
        android:layout_alignStart="@+id/et_username"
        android:layout_alignEnd="@+id/et_username"
        android:layout_below="@+id/view2"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_back_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/have_username"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:textColor="@color/blue100"
        android:layout_marginBottom="10dp" />
</RelativeLayout>