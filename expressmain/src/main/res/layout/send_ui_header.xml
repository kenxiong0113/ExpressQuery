<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/rl_my_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/img_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:focusable="false"
            android:background="@drawable/ic_my_order"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_order"
            android:id="@+id/tv_my_order"
            android:text="我的寄件订单"
            android:focusable="false"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black"/>
    </RelativeLayout>
    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/gray100"/>
    <RelativeLayout
        android:id="@+id/rl_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/img_id"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:focusable="false"
            android:background="@drawable/ic_identity" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_id"
            android:id="@+id/tv_my_id"
            android:focusable="false"
            android:text="我的实名信息"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black"/>
    </RelativeLayout>
</LinearLayout>