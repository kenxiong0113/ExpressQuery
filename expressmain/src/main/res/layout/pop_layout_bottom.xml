<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:background="@mipmap/pop_bg2">

        <TextView
            android:id="@+id/tv1"
            style="@style/GoodsType"
            android:layout_marginTop="90dp"
            android:layout_marginStart="30dp"
            android:text="文件" />

        <TextView
            android:id="@+id/tv2"
            style="@style/GoodsType"
            android:layout_below="@+id/tv1"
            android:layout_alignStart="@+id/tv1"
            android:layout_marginTop="10dp"
            android:text="数码产品"/>

        <TextView
            android:id="@+id/tv3"
            style="@style/GoodsType"
            android:layout_below="@+id/tv2"
            android:layout_alignStart="@+id/tv1"
            android:layout_marginTop="10dp"
            android:text="生活用品" />

        <TextView
            android:id="@+id/tv4"
            style="@style/GoodsType"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/tv1"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="10dp"
            android:text="服饰" />
        <TextView
            android:id="@+id/tv5"
            style="@style/GoodsType"
            android:layout_alignBottom="@id/tv2"
            android:layout_alignStart="@id/tv4"
            android:text="食品" />
        <TextView
            android:id="@+id/tv6"
            style="@style/GoodsType"
            android:layout_alignBottom="@+id/tv3"
            android:layout_alignStart="@+id/tv4"
            android:text="其他"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_below="@+id/tv3"
            android:layout_alignStart="@+id/tv3"
            android:text="禁寄物品：各种枪支弹药、易燃易爆、化学危险品、毒品、各类生化制品、传染性感染性物质、各类非法伪造侵权物品..."
            android:textColor="@color/white"
            android:layout_marginTop="8dp"/>
    </RelativeLayout>
</LinearLayout>