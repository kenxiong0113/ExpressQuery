<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:textSize="16sp"
            android:textColor="@color/gray500"
            android:text="tv_name"/>

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aadd"
            android:textSize="16sp"
            android:textColor="@color/gray500"
            android:layout_alignParentEnd="true"
            android:layout_margin="6dp"/>

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_address"
        android:textSize="12sp"
        android:textColor="@color/gray500"
        android:layout_marginStart="6dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <CheckBox
           android:id="@+id/cb_default"
           android:theme="@style/My_CheckBox"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/gray500"
           android:text="设为默认"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_edit"
            android:drawableStart="@drawable/address_edit"
            android:layout_toStartOf="@+id/tv_delete"
            android:layout_marginEnd="10dp"
            android:textSize="@dimen/dimen16"
            android:drawablePadding="10dp"
            android:textColor="@color/gray500"
            android:text="编辑"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_delete"
            android:text="删除"
            android:drawableStart="@drawable/address_delete"
            android:textSize="@dimen/dimen16"
            android:drawablePadding="10dp"
            android:textColor="@color/gray500"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="6dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/gray100"/>
</LinearLayout>